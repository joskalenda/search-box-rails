</div>

<div id="cache_result">
 Most recent searched articles
  <% ArticleRecord.order(searched_record: :desc).slice(0, 5).each do |record|%>
    <br>
    <% if record.user == current_user %>
      <%= record.key_word %>
      <%= record.searched_record %>
    <% end %>
  <% end %>
</div>

<h1>Articles</h1>
<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
    <p>
      <%= link_to "Show this article", article %>
    </p>
  <% end %>
</div>

